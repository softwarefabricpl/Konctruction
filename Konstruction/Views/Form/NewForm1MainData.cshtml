@model KundenTeileNrFormViewModel
@{
    System.Globalization.CultureInfo newCulture = (System.Globalization.CultureInfo)System.Globalization.CultureInfo.CurrentCulture.Clone();
    newCulture.NumberFormat.NumberGroupSeparator = ".";
    newCulture.NumberFormat.NumberDecimalSeparator = ".";

    System.Threading.Thread.CurrentThread.CurrentCulture = newCulture;
    System.Threading.Thread.CurrentThread.CurrentUICulture = newCulture;
}
<table style="width: 100%;">
    <tr>
        <td class="label">
            @Html.DevExpress().Label(
            settings =>
            {
                settings.ControlStyle.CssClass = "label";
                settings.Text = "Kunden Zg Nr:";
                settings.AssociatedControlName = "KZgNr";
            }
        ).GetHtml()
        </td>
        <td class="value">
            @Html.DevExpress().TextBox(
            settings =>
            {

                settings.Name = "KZgNr";
                settings.Width = Unit.Percentage(100);
                settings.ControlStyle.CssClass = "editor";
                settings.ShowModelErrors = true;
                settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
                settings.Properties.ValidationSettings.Display = CommonHelper.DefaultEditorErrorDisplayMode;
            }).Bind(Model.KZgNr).GetHtml()
        </td>
        <td class="label">
            @Html.DevExpress().Label(
             settings =>
             {
                 settings.ControlStyle.CssClass = "label";
                 settings.Text = "PASS PDB Nr:";
                 settings.AssociatedControlName = "PassPdbNr";
             } ).GetHtml()
        </td>
        <td class="value">
            @Html.DevExpress().TextBox(
             settings =>
             {

                 settings.Name = "PassPdbNr";
                 settings.Width = Unit.Percentage(100);
                 settings.ControlStyle.CssClass = "editor";
                 settings.ShowModelErrors = true;
                 settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
                 settings.Properties.ValidationSettings.Display = CommonHelper.DefaultEditorErrorDisplayMode;
                 settings.Properties.MaskSettings.Mask = "aa.aaa.aa.aa";
             }).Bind(Model.PassPdbNr).GetHtml()
        </td>

    </tr>
    <tr>
        <td class="label">
            @Html.DevExpress().Label(
            settings =>
            {
                settings.ControlStyle.CssClass = "label";
                settings.Text = "Bezeichnung:";
                settings.AssociatedControlName = "KZgBz";
            }
        ).GetHtml()
        </td>
        <td class="value" colspan="3">
            @Html.DevExpress().TextBox(
          settings =>
          {
              settings.Name = "KZgBz";
              settings.Width = Unit.Percentage(100);
              settings.ControlStyle.CssClass = "editor";
              settings.ShowModelErrors = true;
              settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
              settings.Properties.ValidationSettings.Display = CommonHelper.DefaultEditorErrorDisplayMode;
          } ).Bind(Model.KZgBz).GetHtml()
        </td>
    </tr>
    <tr>
        <td class="label">
            @Html.DevExpress().Label(
            settings =>
            {
                settings.ControlStyle.CssClass = "label";
                settings.Text = "Zg Datum:";
                settings.AssociatedControlName = "KZgDate";
            }
        ).GetHtml()
        </td>
        <td class="value">
            @Html.DevExpress().DateEdit(
                  settings =>
                  {
                      settings.Name = "KZgDate";
                      settings.Properties.EditFormat = EditFormat.Date;
                      settings.Width = Unit.Percentage(100);
                      settings.ShowModelErrors = true;
                      settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
                      settings.Properties.ValidationSettings.Display = CommonHelper.DefaultEditorErrorDisplayMode;
                  }  ).Bind(Model.KZgDate).GetHtml()
        </td>
        <td class="label">
            @Html.DevExpress().Label(
            settings =>
            {
                settings.ControlStyle.CssClass = "label";
                settings.Text = "Daten Stand:";
                settings.AssociatedControlName = "ZgStatus";
            }
        ).GetHtml()
        </td>

        <td class="value">
            @Html.DevExpress().TextBox(
          settings =>
          {
              settings.Name = "Pdastand";
              settings.Width = Unit.Percentage(100);
              settings.ControlStyle.CssClass = "editor";
              settings.ShowModelErrors = true;
              settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
              settings.Properties.ValidationSettings.Display = CommonHelper.DefaultEditorErrorDisplayMode;
          } ).Bind(Model.Pdastand).GetHtml()
        </td>
    </tr>
    <tr>
        <td class="label">
            @Html.DevExpress().Label(
              settings =>
              {
                  settings.ControlStyle.CssClass = "label";
                  settings.Text = "Datenformat:";
                  settings.AssociatedControlName = "Datenformat";
              }
          ).GetHtml()
        </td>
        <td class="value">
            @Html.DevExpress().ComboBox(
                          settings =>
                          {
                              settings.Name = "Datenformat";
                              settings.Width = Unit.Percentage(100);
                              settings.ControlStyle.CssClass = "editor";
                              settings.ShowModelErrors = true;
                              settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
                              settings.Properties.ValidationSettings.Display = CommonHelper.DefaultEditorErrorDisplayMode;
                              settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.StartsWith;
                              settings.Properties.DropDownStyle = DropDownStyle.DropDown;
                              settings.Properties.TextField = "Name";
                              settings.Properties.ValueField = "Name";
                              settings.Properties.NullText = "type name to add";
                          }).BindList(CommonHelper.GetDatenformatItems()).Bind(Model.Datenformat).GetHtml()
        </td>
        <td class="label">
            @Html.DevExpress().Label(
            settings =>
            {
                settings.ControlStyle.CssClass = "label";
                settings.Text = "Ersteller:";
                settings.Width = Unit.Percentage(100);
                settings.AssociatedControlName = "Ersteller";
            }
        ).GetHtml()
        </td>
        <td class="value" colspan="3">
            @Html.DevExpress().ComboBox(
                      settings =>
                      {
                          settings.Name = "Ersteller";
                          settings.Width = Unit.Percentage(100);
                          settings.ControlStyle.CssClass = "editor";
                          settings.ShowModelErrors = true;
                          settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
                          settings.Properties.ValidationSettings.Display = CommonHelper.DefaultEditorErrorDisplayMode;
                          settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.StartsWith;
                          settings.Properties.DropDownStyle = DropDownStyle.DropDown;
                          settings.Properties.TextField = "Name";
                          settings.Properties.ValueField = "Name";
                          settings.Properties.NullText = "type name to add";
                      }).BindList(CommonHelper.GetErstellerItems()).Bind(Model.Ersteller).GetHtml()
        </td>
    </tr>
    <tr>
        <td class="label">
            @Html.DevExpress().Label(
            settings =>
            {
                settings.ControlStyle.CssClass = "label";
                settings.Text = "Bemerkung:";
                settings.AssociatedControlName = "ZgMemo";
            }
        ).GetHtml()
        </td>
        <td class="value" colspan="3">
            @Html.DevExpress().Memo(
          settings =>
          {
              settings.Name = "ZgMemo";
              settings.Width = Unit.Percentage(100);
              settings.Height = Unit.Pixel(80);
              settings.ControlStyle.CssClass = "editor";
              settings.ShowModelErrors = true;
              settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
              settings.Properties.ValidationSettings.Display = CommonHelper.DefaultEditorErrorDisplayMode;
          } ).Bind(Model.ZgMemo).GetHtml()
        </td>
    </tr>
</table>

@Html.DevExpress().Splitter(
      settings =>
      {
          settings.Name = "splResizing";
          settings.FullscreenMode = false;
          settings.Styles.Pane.Paddings.Padding = 0;
          settings.Style["margin-top"] = "15px";
          settings.Orientation = System.Web.UI.WebControls.Orientation.Horizontal;
          settings.Width = Unit.Percentage(100);
          settings.ClientSideEvents.PaneResized = "PaneResized";
          settings.Panes.Add(gridPane =>
          {
              gridPane.Name = "grid1Container";
              gridPane.Size = Unit.Percentage(30);
              gridPane.MinSize = 100;
              gridPane.ScrollBars = ScrollBars.None;
              gridPane.SetContent(() =>
              {
                  @Html.RenderPartial("~/Views/Form/Controls/Form1MainDataKundeZuweisungMainDataPartial.cshtml", Model);
              });
          });

          settings.Panes.Add(editorsPane =>
          {
              editorsPane.Name = "grid2Container";
              editorsPane.Size = Unit.Percentage(70);
              editorsPane.ShowCollapseForwardButton = DefaultBoolean.True;
              editorsPane.ScrollBars = System.Web.UI.WebControls.ScrollBars.None;
              editorsPane.SetContent(() =>
              {
                  @Html.RenderPartial("~/Views/Form/Controls/Form1MainDataKundeZgRevisionPartial.cshtml", Model);
              });
          });
      }).GetHtml()

